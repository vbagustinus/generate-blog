<%- include('assets/partials/dashboard-header',{my_title:'Dashboard - All Post',folder:'../../'})%>
/
<!--main content start-->
<section id="main-content">
    <section class="wrapper">
    <!-- page start-->
      <div class="row">
          <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    All Post Data
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-cog"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
                </header>
                <div class="panel-body">
                    <section id="no-more-tables">
                        <table class="table table-bordered table-striped table-condensed cf">
                            <thead class="cf">
                            <tr>
                                <th>NO</th>
                                <th>TITLE</th>
                                <th>PUBLISH</th>
                                <th>ACTIONS</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%dataPosts.forEach((post,i) =>{%>
                            <tr>
                                <td class="numeric" data-title="NO"><%=i+1%></td>
                                <td data-title="TITLE"><%=post.title%></td>
                                <td data-title="PUBLISH"><%=post.date_publish%></td>
                                <td data-title="ACTIONS">
                                  <div class="panel-body">
                                    <a style="margin-bottom: 5px;" href="/dashboard/post/edit/<%=post.id%>" type="button" class="btn btn-default btn-sm">Update</a>
                                    <a style="margin-bottom: 5px;" href="/dashboard/post/delete/<%=post.id%>" type="button" class="btn btn-default btn-sm" onclick="return confirm('are you sure to delete?!');">Delete</a>
                                  </div>
                                </td>
                            </tr>
                            <%})%>
                            </tbody>
                        </table>
                    </section>
                </div>
            </section>
          </div>
      </div>
    <!-- page end-->
    </section>
</section>
<!--main content end-->

<%- include('assets/partials/dashboard-footer',{folder:'../../'})%>
